// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                   String                @id() @default(uuid())
  email                String                @unique()
  passwordHash         String
  timeblocks           Timeblock[]
  AccountSessionTokens AccountSessionToken[]
  AccountCsrfTokens    AccountCsrfToken[]
}

enum AuthenticationMethod {
  header
  cookie
}

model AccountSessionToken {
  token     String  @id()
  account   Account @relation(fields: [accountId], references: [id])
  accountId String

  // Token to be sent in the header in "cookie" requests and
  // stored in localStorage to prevent CSRF attacks
  csrfToken String?

  authenticationMethod AuthenticationMethod
}

model AccountCsrfToken {
  token     String  @id()
  account   Account @relation(fields: [accountId], references: [id])
  accountId String
}

model AccountRegistrationRequest {
  id               String @id() @default(uuid())
  email            String @unique()
  passwordHash     String
  confirmationCode String
}

model Timeblock {
  id             String          @id() @default(uuid())
  name           String
  owner          Account         @relation(fields: [ownerAccountId], references: [id])
  ownerAccountId String
  TimeblockTask  TimeblockTask[]
}

model TimeblockTask {
  id          String    @id() @default(uuid())
  name        String
  description String
  timeblock   Timeblock @relation(fields: [timeblockId], references: [id])
  timeblockId String
}
