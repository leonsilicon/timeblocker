// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id           String      @id() @default(uuid())
  email        String      @unique()
  passwordHash String
  timeblocks   Timeblock[]

  accountSessionTokens AccountSessionToken[]
  accountCsrfTokens    AccountCsrfToken[]
}

enum AuthenticationMethod {
	header
	cookie
}

model AccountSessionToken {
  token     String  @id()
  account   Account @relation(fields: [accountId], references: [id])
  accountId String

  // Token to be sent in the header in "cookie" requests and
  // stored in localStorage to prevent CSRF attacks
  csrfToken String?

  // Either 'header' or 'cookie'
  authenticationMethod AuthenticationMethod
}

model AccountCsrfToken {
  token     String  @id()
  account   Account @relation(fields: [accountId], references: [id])
  accountId String
}

model AccountRegistrationRequest {
  id               String @id() @default(uuid())
  email            String @unique()
  passwordHash     String
  confirmationCode String
}

model Timeblock {
  id             String  @id() @default(uuid())
  name           String
  owner          Account @relation(fields: [ownerAccountId], references: [id])
  ownerAccountId String

  tasks TimeblockTask[]
}

model TimeblockColumn {
  id String @id()
}

model TimeblockTask {
  id          String     @id()
  name        String
  description String
  Timeblock   Timeblock? @relation(fields: [timeblockId], references: [id])
  timeblockId String?
}

model TimeblockTaskBlock {
  id             String @id()
  startTimestamp Int
  endTimestamp   Int
}
