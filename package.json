{
	"name": "timeblocker",
	"private": true,
	"version": "1.0.0",
	"description": "A timeblocking app.",
	"repository": "leonzalion/timeblocker",
	"author": {
		"name": "Leon Si",
		"email": "contact@leonzalion.com",
		"url": "https://leonzalion.com"
	},
	"type": "module",
	"scripts": {
		"up": "docker compose up",
		"gen": "pnpm gen --filter=./backend",
		"sync-index": "pnpm sync-index --recursive",
		"dev:frontend": "pnpm dev --filter=./frontend",
		"build:frontend": "pnpm build --filter=./frontend",
		"prepare": "lion-git-hooks",
		"lint": "pnpm lint --recursive",
		"prettier": "pnpm prettier --recursive",
		"tc": "pnpm tc --recursive"
	},
	"dependencies": {
		"pinia": "^2.0.0-rc.10",
		"vue": "^3.2.25"
	},
	"devDependencies": {
		"@leonzalion/configs": "^1.0.60",
		"@types/node": "^17.0.0",
		"eslint": "^8.5.0",
		"lint-staged": "^12.1.3",
		"lion-git-hooks": "^1.0.2",
		"prettier": "^2.5.1",
		"sync-index": "^1.0.11",
		"ts-node": "^10.4.0",
		"typescript": "^4.5.4"
	},
	"prettier": "@leonzalion/configs/prettier",
	"commitlint": {
		"extends": [
			"@leonzalion/configs/commitlint"
		]
	},
	"lint-staged": {
		"*.{js,ts,vue}": [
			"pnpm run lint",
			"pnpm run prettier"
		]
	},
	"pnpm": {
		"overrides": {
			"preact": "npm:lodash.noop@latest"
		}
	}
}
